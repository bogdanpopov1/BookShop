<Window x:Class="BookShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShop"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Книжный магазин" Height="1000" Width="1500">
    <Grid Background="#FFF7FAFF">

        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="863*" />
        </Grid.RowDefinitions>

        <Label Content="Книжный магазин" 
               Grid.Row="0" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontSize="72" FontWeight="Bold" 
               FontFamily="Airfool" Background="{x:Null}" 
               Foreground="#FF6E86FF" />

        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               Margin="20,0,20,20" 
               NavigationUIVisibility="Hidden" />

    </Grid>
</Window>
